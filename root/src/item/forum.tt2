<script>
function collapse(section) { 
$('#' + section).hide();
$('#coll_' + section).show();
return;
}
function expand(section) { 
$('#' + section).show();
$('#coll_' + section).hide();
return;
}

function collapse_all() { 
$("[id^=section_]").hide();
$("[id^=coll_section_]").show();
$('#collapse_button').hide();
$('#expand_button').show();
return;
}
function expand_all() { 
$("[id^=section_]").show();
$("[id^=coll_section_]").hide();
$('#expand_button').hide();
$('#collapse_button').show();
return;
}


</script>
