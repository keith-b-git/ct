[% WRAPPER 'menu/content.tt2' ; object = menu_item ; meta.acc_count = meta.acc_count + 1 ; meta.thread_acc = meta.acc_count ; rowsize = 20 ; cat_count = 0 ;
thread_count = menu_item.viewable_item_count(c.user||0,5) ;
